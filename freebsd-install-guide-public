echo 'nameserver 192.168.102.1' >> /usr/jails/flavours/dmz/etc/resolv.conf
echo 'nameserver 192.168.102.2' >> /usr/jails/flavours/dmz/etc/resolv.conf
echo 'options edns0' >> /usr/jails/flavours/dmz/etc/resolv.conf

