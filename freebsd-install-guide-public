################################################################################
# Uprecords - Track uptime trends/percentages.
# Use via `uprecords`
################################################################################

pkg install sysutils/uptimed 

echo '' >> /etc/rc.conf
echo '# Enable Uptimed' >> /etc/rc.conf
echo 'uptimed_enable="YES"' >> /etc/rc.conf
echo 'uptimed_user="_uptimed"' >> /etc/rc.conf
echo 'uptimed_pidfile="/var/run/uptimed/uptimed.pid"' >> /etc/rc.conf

patch /usr/local/etc/rc.d/uptimed << 'EOF'
31a32,39
> start_precmd=uptimed_precmd
> uptimed_precmd()
> {
>     if [ ! -z ${uptimed_user} ]; then
>        install -d -o ${uptimed_user} /var/run/uptimed
>        install -d -o ${uptimed_user} /var/spool/uptimed
>     fi
> }
'EOF'

pw useradd _uptimed -c "Uptimed Account,,," -d "/nonexistent" -s /usr/sbin/nologin

service uptimed start

