iocell create tag=foreman release=11.1-RELEASE
iocell set vnet=on foreman
iocell set interfaces='vnet1:bridge1' foreman
iocell set host_hostname="foreman.pa-us.mydomain.name" foreman
iocell set ip4_addr="vnet1|10.100.102.21/24" foreman
