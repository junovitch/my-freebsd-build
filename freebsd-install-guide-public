iocell create tag=logstash release=11.1-RELEASE
iocell set vnet=on logstash
iocell set interfaces='vnet1:bridge1' logstash
iocell set host_hostname="logstash.pa-us.mydomain.name" logstash
iocell set ip4_addr="vnet1|10.100.102.26/24" logstash
iocell set defaultrouter="10.100.102.1" logstash
iocell set ip6_addr="vnet1|accept_rtadv" logstash
iocell set boot="on" logstash
mkdir -p /iocell/jails/`iocell get host_hostuuid logstash`/root/logshare
echo "/var/log /iocell/jails/`iocell get host_hostuuid logstash`/root/logshare nullfs ro 0 0" \
	>> /iocell/jails/`iocell get host_hostuuid logstash`/fstab
iocell start logstash
iocell console logstash

passwd

pkg install bash zsh tmux vim-lite pstree cmdwatch tree

pkg install logstash kibana5 elasticsearch5

sed -i '' -e '/path/ s|/var/log/messages|/logshare/all.log|' /usr/local/etc/logstash/logstash.conf
sed -i '' -e 's|# elasticsearch|elasticsearch|' /usr/local/etc/logstash/logstash.conf

sed -i '' -e 's|#server.port|server.port|' /usr/local/etc/kibana.yml
sed -i '' -e 's|#server.host.*|server.host: "10.100.102.26"|' /usr/local/etc/kibana.yml

sed -i '' -e 's|#network.host.*|network.host: localhost|' /usr/local/etc/elasticsearch/elasticsearch.yml

sysrc -f /etc/rc.conf.local elasticsearch_enable=YES logstash_enable=YES kibana_enable=YES
service elasticsearch start; service kibana start; service logstash start

