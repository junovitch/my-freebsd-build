    Disk "/^md/"
    Disk "/^pass/"
    Disk "/^cd/"
    IgnoreSelected true
</Plugin>

<Plugin df>
    MountPoint "/^/$/"
    MountPoint "/^/zfs$/"
    IgnoreSelected false
</Plugin>

<Plugin exec>
    Exec "_collectd:_collectd" "/usr/local/sbin/exec-hwsensors.sh"
    Exec "_collectd:_collectd" "/usr/local/sbin/exec-unbound.sh"
</Plugin>

