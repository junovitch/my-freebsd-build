echo 'nameserver 192.168.102.1' >> /zfs/jails/flavours/dmz/etc/resolv.conf
echo 'nameserver 192.168.102.2' >> /zfs/jails/flavours/dmz/etc/resolv.conf
echo 'options edns0' >> /zfs/jails/flavours/dmz/etc/resolv.conf

